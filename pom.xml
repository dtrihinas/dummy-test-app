<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>dummy-test-app-with-monitoring</groupId>
	<artifactId>dummytestapp</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>dummytestapp</name>
	<repositories>
            <!--OpenShift Repository-->
		<repository>
			<id>eap</id>
			<url>http://maven.repository.redhat.com/techpreview/all</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<!-- PaaSport Repository -->
		<repository>
			<id>paasport repo</id>
			<name>paasport repo</name>
			<url>http://paasportrepository.euprojects.net/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>eap</id>
			<url>http://maven.repository.redhat.com/techpreview/all</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.6</maven.compiler.source>
		<maven.compiler.target>1.6</maven.compiler.target>
	</properties>
	<dependencies>
        <!--PaaSport core dependencies:start-->	
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>eu.paasport</groupId>
			<artifactId>MonitoringAgent</artifactId>
			<version>0.0.6-SNAPSHOT</version>
		</dependency>
        <!--PaaSport core dependencies:end-->	
                        <!--PaaSport Portability Library-->     

        <dependency>
            <groupId>eu.paasport.portability</groupId>
            <artifactId>paasport-portability-core</artifactId>
            <version>1.1.5</version>
        </dependency>
        <!-- If you intend to deploy the app on Cloud Foundry, add the following -->
        <dependency>
            <groupId>eu.paasport.portability</groupId>
            <artifactId>paasport-portability-cloudfoundry-connector</artifactId>
            <version>1.1.5</version>
        </dependency>
        <!-- If you intend to deploy the app on OpenShift, add the following -->
        <dependency>
            <groupId>eu.paasport.portability</groupId>
            <artifactId>paasport-portability-openshift-connector</artifactId>
            <version>1.1.5</version>
        </dependency>  
       </dependencies>
        
        
         <!--OpenShift dependencies:start-->       
	<profiles>
		<profile>
			<!-- When built in OpenShift the 'openshift' profile will be used when 
				invoking mvn. -->
			<!-- Use this profile for any OpenShift specific customization your app 
				will need. -->
			<!-- By default that is to put the resulting archive into the 'webapps' 
				folder. -->
			<!-- http://maven.apache.org/guides/mini/guide-building-for-different-environments.html -->
			<id>openshift</id>
			<build>
				<finalName>dummytestapp</finalName>
				<plugins>
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.1.1</version>
						<configuration>
							<outputDirectory>webapps</outputDirectory>
							<warName>ROOT</warName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
        <!--OpenShift dependencies:end-->

        <!--HEROKU and CloudControl dependencies:start-->
        <build>
        <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.3</version>
            <executions>
                <execution>
                    <phase>package</phase>
                    <goals><goal>copy</goal></goals>
                    <configuration>
                        <artifactItems>
                            <artifactItem>
                                <groupId>com.github.jsimone</groupId>
                                <artifactId>webapp-runner</artifactId>
                                <version>8.0.24.0</version>
                                <destFileName>webapp-runner.jar</destFileName>
                            </artifactItem>
                        </artifactItems>
                    </configuration>
                </execution>
            </executions>
        </plugin>            
            
        </plugins>
        </build>
        <!--HEROKU and CloudControl dependencies:end-->
        
             
        
</project>
